<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout2">

    <TextView
        android:id="@+id/ocrTextView"
        android:layout_width="330dp"
        android:layout_height="531dp"
        android:scrollbars="vertical"
        android:text="@string/ResuMate"
        android:textAlignment="viewStart"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        tools:layout_conversion_absoluteHeight="236dp"
        tools:layout_conversion_absoluteWidth="362dp" />

    <Button
        android:id="@+id/choose_button"
        android:layout_width="114dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:text="@string/capture_res"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ocr_button"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ocrTextView"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/view_button"
        android:layout_width="118dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:text="@string/v_skills"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toEndOf="@+id/ocr_button"
        app:layout_constraintTop_toBottomOf="@+id/ocrTextView"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ocrTextView" />

    <EditText
        android:id="@+id/webpage_link"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="4dp"
        android:hint="@string/webpageLink"
        app:layout_constraintEnd_toEndOf="@+id/logout_button"
        app:layout_constraintTop_toTopOf="@+id/logout_button" />

    <Button
        android:id="@+id/compare_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="108dp"
        android:text="@string/compare"
        app:layout_constraintEnd_toEndOf="@+id/webpage_link"
        app:layout_constraintTop_toTopOf="@+id/webpage_link" />

    <Button
        android:id="@+id/ocr_button"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:text="@string/analysis"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webpage_link"
        app:layout_constraintVertical_bias="0.952" />
</androidx.constraintlayout.widget.ConstraintLayout>